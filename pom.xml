                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>3.0.0-M7</version>
                        <configuration>
                            <systemProperties>
                                <url>https://prod-site.com</url>
                            </systemProperties>
                            <suiteXmlFiles>
                                <!--                        <suiteXmlFile>testng.xml</suiteXmlFile>-->
                            </suiteXmlFiles>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
